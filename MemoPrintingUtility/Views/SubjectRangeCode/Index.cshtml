
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main" class="container-fluid bg-light" style="min-height:400px">
    <div class="container py-4" ng-controller="MyController">
        <div class="row justify-content-center " style="padding: 5px ;padding-top:20px">

            <div class="col-md-12 row text-left">
                <h2> Subject List </h2>
                <br />
                <br />
            </div>

            <div class="card-body">
                <div class="row justify-content-center " style="padding: 5px ;padding-top:20px">



                    <div class="col-md-12 row">

                        <div class="col-md-4 row  ">

                            <span class="col-md-6 ">Report Type:</span>
                            <p class="col-md-6  ">
                                <select ng-model="SubjectRangeType" class="form-control">
                                    <option value="">--Select report--</option>
                                    <option value="Sem">Sem</option>
                                    <option value="Year">Year</option>
                                </select>
                            </p>

                        </div>

                        <div class="col-md-4 row">

                            <span class="col-md-6 text-left  text-right"> Range From:</span>
                            <p class="col-md-6">
                                <input type="text" ng-model="RangesStart" />
                            </p>


                        </div>

                        <div class="col-md-4 row">
                            <span class="col-md-6 text-right">Range Gap:</span>
                            <p class="col-md-6  ">
                                <input type="text" ng-model="RangesGap" />
                            </p>
                        </div>


                     


                    </div>

                    <div class="col-md-12 row">
                        <div class="col-md-4 row">
                           
                           
                               Total Count:  {{SubjectHeadCount}}
                            
                        </div>

                    </div>

                    <div class="col-md-12  row   ">

                        <input type="button" ID="btnGnerate" runat="server" Text="Get Data" CssClass="col-md-4 btn btn-dark btn-send" ng-click="GetaData()" Style="float: right" value="Get data" />
                        <input type="button" ID="btnGnerate" runat="server" Text="Generate Report" CssClass="col-md-4 btn btn-dark btn-send" ng-click="GenerateRange()" Style="float: right" value="Generate Range" />
                        <input type="button" ID="btnGnerate" runat="server" Text=Save" CssClass="col-md-4 btn btn-dark btn-send" ng-click="Save()" Style="float: right" value="Save" />

                    </div>


                </div>

                <div id="dvSemWise"  >

                    <table border="1" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    S.no
                                </th>
                                <th>
                                    Subject Code
                                </th>
                                <th>
                                    Subject Name
                                </th>
                                <th>
                                    Year
                                </th>
                                <th >
                                    Sem
                                </th>
                                <th>
                                    Course ID
                                </th>
                                <th>
                                    Course Name
                                </th>

                                <th>
                                    Count
                                </th>

                                <th>
                                    Range From
                                </th>

                                <th>
                                    Range End
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="x in lstSubjectDetails">
                                <td>{{$index + 1}}</td>
                                <td>{{x.SubjectCode}}</td>

                                <td>{{x.SubjectName}}</td>
                                <td>{{x.Year}}</td>
                                <td>{{x.Sem}}</td>
                                <td>{{x.CourseID}}</td>
                                <td>{{x.CourseName}}</td>


                                <td>{{x.Count}}</td>
                                <td>{{x.RangeStart}}</td>
                                <td>{{x.RangeEnd}}</td>
                            </tr>
                        </tbody>

                    </table>
                </div>



                <div id="dvYearWise"  class="hide">

                    <table border="1" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    S.no
                                </th>
                                <th>
                                    Subject Code
                                </th>
                                <th>
                                    Subject Name
                                </th>
                                <th>
                                    Year
                                </th>
                              
                                <th>
                                    Course ID
                                </th>
                                <th>
                                    Course Name
                                </th>

                                <th>
                                    Count
                                </th>

                                <th>
                                    Range From
                                </th>

                                <th>
                                    Range End
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="x in lstSubjectDetails">
                                <td>{{$index + 1}}</td>
                                <td>{{x.SubjectCode}}</td>

                                <td>{{x.SubjectName}}</td>
                                <td>{{x.Year}}</td>
                               
                                <td>{{x.CourseID}}</td>
                                <td>{{x.CourseName}}</td>


                                <td>{{x.Count}}</td>
                                <td>{{x.RangeStart}}</td>
                                <td>{{x.RangeEnd}}</td>
                            </tr>
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
